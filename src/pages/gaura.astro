---
import Layout from '../layouts/Layout.astro';
import Article from '../components/Article.astro';
import HorizontalArticle from '../components/HorizontalArticle.astro';
---

<Layout>
    <!-- First Section: Mengenal Desa Gaura -->
    <section class="relative py-20 overflow-hidden bg-gradient-to-br from-gray-50 to-white">
        <div class="relative container mx-auto px-4 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <!-- Left Content -->
                <div class="space-y-6">
                    <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 leading-tight">
                        Mengenal <span class="text-orange-100">Desa Gaura</span>
                    </h1>
                    
                    <p class="text-gray-700 text-lg leading-relaxed">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor 
                        incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud 
                        exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor 
                        in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
                    </p>
                </div>
                
                <!-- Right Content - Orange Blocks -->
                <div class="relative flex justify-center lg:justify-end">
                    <!-- Orange blocks arrangement - 3 boxes layout -->
                    <div class="relative w-80 h-80">
                        <!-- Top left box -->
                        <div class="absolute -top-15 right-0 w-38 h-54 bg-orange-100 rounded-lg shadow-lg"></div>
                        
                        
                        <!-- Right tall box -->
                        <div class="absolute top-10 z-20 left-0 w-38 h-54 bg-orange-100 rounded-lg shadow-lg"></div>
                        
                        <!-- Bottom right box that cuts through brown accent -->
                        <div class="absolute -bottom-15 right-0 w-38 h-54 bg-orange-100 rounded-lg shadow-lg z-10"></div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Bottom brown accent -->
        <div class="absolute -bottom-15 left-0 right-0 h-32 bg-amber-900"></div>
    </section>
    
    <!-- Second Section: Lebih Dekat dengan Desa Gaura -->
    <section class="relative py-20 bg-gray-100 overflow-hidden">
        <div class="relative">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center px-8">
                
                <!-- Left Content - Empty for now (no ornaments) -->
                <div class="order-2 lg:order-1">
                    <!-- Placeholder for future ornaments -->
                </div>
                
                <!-- Right Content -->
                <div class="space-y-6 order-1 lg:order-2">
                    <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 leading-tight">
                        Lebih Dekat dengan <span class="text-orange-500">Desa Gaura</span>
                    </h2>
                    
                    <p class="text-gray-700 text-lg leading-relaxed">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor 
                        incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud 
                        exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor 
                        in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
                    </p>
                </div>
            </div>
            
            <!-- Statistics Section -->
            <div class="mt-16 flex justify-end relative z-20">
                <div class="bg-amber-900 rounded-l-2xl overflow-hidden shadow-2xl w-full max-w-4xl">
                    <div class="grid grid-cols-1 md:grid-cols-3">
                        <!-- Penduduk -->
                        <div class="p-6 lg:p-8 text-center text-white relative">
                            <div class="text-4xl lg:text-5xl font-bold mb-2">12</div>
                            <div class="text-lg lg:text-xl font-medium opacity-90">Penduduk</div>
                            
                            <!-- Right border - half height and centered -->
                            <div class="hidden md:block absolute right-0 top-1/2 -translate-y-1/2 w-[2px] h-16 bg-white"></div>
                        </div>
                        
                        <!-- Potensi UMKM -->
                        <div class="p-6 lg:p-8 text-center text-white relative border-t md:border-t-0 border-white border-opacity-20">
                            <div class="text-4xl lg:text-5xl font-bold mb-2">12</div>
                            <div class="text-lg lg:text-xl font-medium opacity-90">Potensi UMKM</div>
                            
                            <!-- Right border - half height and centered -->
                            <div class="hidden md:block absolute right-0 top-1/2 -translate-y-1/2 w-[2px] h-16 bg-white"></div>
                        </div>
                        
                        <!-- Lokasi Wisata -->
                        <div class="p-6 lg:p-8 text-center text-white border-t md:border-t-0 border-white border-opacity-20">
                            <div class="text-4xl lg:text-5xl font-bold mb-2">12</div>
                            <div class="text-lg lg:text-xl font-medium opacity-90">Lokasi Wisata</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Article Section -->
    <section class="bg-doha-20 py-20 relative">
