---
import Layout from './Layout.astro';

const { 
    image, 
    imageAlt, 
    category, 
    location, 
    targetAudience,
    description,
    objectives = [],
    solutions = [],
    goals = [],
    gallery = []
} = Astro.props;
---

<Layout>
    <div class="relative bg-doha-20">
        <div class="relative">
            <div class="lg:mx-20 px-4 py-14">
                <h1 class="text-3xl md:text-[42px] font-extrabold mb-8 text-center leading-[100%] text-doha-50">
                    Lorem Ipsum Dolor Sit Amet
                </h1>
                <div class="mb-8">
                    <img 
                        src={image} 
                        alt={imageAlt}
                        class="w-full h-64 md:h-80 object-cover rounded-lg shadow-lg"
                    />
                </div>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <div class="bg-doha-20 mx-auto py-8">
        <div class="lg:mx-20 px-4">
            <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
                <div class="lg:col-span-3 space-y-8">
                    <!-- About Program Section -->
                    <section class="">
                        <h2 class="text-[36px] font-bold text-doha-100 mb-4">Tentang Program Kerja</h2>
                        <div class="text-black text-justify text-[24px] leading-relaxed">
                            {description ? (
                                <p>{description}</p>
                            ) : (
                                <slot name="description text-justify">
                                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>
                                </slot>
                            )}
                        </div>
                    </section>

                    <!-- Objectives Section -->
                    <section class="  ">
                        <h2 class="text-[36px] font-bold text-doha-100 mb-4">Tantangan yang Dihadapi</h2>
                        <div class="text-black leading-relaxed text-[24px] text-justify">
                            {objectives.length > 1 ? (
                                <ul class="space-y-2">
                                    {objectives.map(objective => (
                                        <li class="flex items-start">
                                            <span class="text-doha-50 mr-2">•</span>
                                            <span>{objective}</span>
                                        </li>
                                    ))}
                                </ul>
                            ) : (
                                <slot name="objectives text-justify">
                                    <p>{objectives}</p>
                                </slot>
                            )}
                        </div>
                    </section>

                    <!-- Solutions Section -->
                    <section class="  ">
                        <h2 class="text-[36px] font-bold text-doha-100 mb-4">Langkah Solutif yang Ditempuh</h2>
                        <div class="text-black leading-relaxed text-[24px] text-justify">
                            {solutions.length > 1 ? (
                                <ul class="space-y-2">
                                    {solutions.map(solution => (
                                        <li class="flex items-start">
                                            <span class="text-doha-50 mr-2">•</span>
                                            <span>{solution}</span>
                                        </li>
                                    ))}
                                </ul>
                            ) : (
                                <slot name="solutions text-justify">
                                    <p>{solutions}</p>
                                </slot>
                            )}
                        </div>
                    </section>

                    <!-- Goals Section -->
                    <section class="  ">
                        <h2 class="text-[36px] font-bold text-doha-100 mb-4">Capaian Program</h2>
                        <div class="text-black leading-relaxed text-[24px] text-justify">
                            {goals.length > 1 ? (
                                <ul class="space-y-2">
                                    {goals.map(goal => (
                                        <li class="flex items-start">
                                            <span class="text-doha-50 mr-2">•</span>
                                            <span>{goal}</span>
                                        </li>
                                    ))}
                                </ul>
                            ) : (
                                <slot name="goals text-justify">
                                    <p>{goals}</p>
                                </slot>
                            )}
                        </div>
                    </section>

                    <!-- Gallery Section -->
                    {gallery.length > 0 && (
                        <section class="  ">
                            <h2 class="text-[36px] font-bold text-doha-100 mb-6">Galeri Dokumentasi</h2>
                            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                                {gallery.map(img => (
                                    <img 
                                        src={img.src} 
                                        alt={img.alt}
                                        class="w-full h-32 object-cover rounded-lg hover:shadow-md transition-shadow duration-300 cursor-pointer"
                                        onclick={`openGallery('${img.src}')`}
                                    />
                                ))}
                            </div>
                        </section>
                    )}
                </div>

                <!-- Sidebar -->
                <div class="lg:col-span-1">
                    <div class="bg-doha-50 text-white rounded-2xl py-9 px-12 border-l-8 border-doha-100 top-8">
                        <div class="space-y-4">
                            <div>
                                <h3 class="font-medium text-[28px]">Klaster</h3>
                                <p class="text-doha-20 font-bold text-[32px]">{category}</p>
                            </div>
                            <div>
                                <h3 class="font-medium text-[28px]">Lokasi</h3>
                                <p class="text-doha-20 font-bold text-[32px]">{location}</p>
                            </div>
                            <div>
                                <h3 class="font-medium text-[28px]">Sasaran</h3>
                                <p class="text-doha-20 font-bold text-[32px]">{targetAudience}</p>
                            </div>
                        </div>
                    </div>
                    <slot name="sidebar" />
                </div>
            </div>
        </div>
    </div>
</Layout>