---
export interface Props {
    image: string;
    imageAlt: string;
    title: string;
    date: string;
    description: string;
    link: string;
}

const { image, imageAlt, title, date, description, link } = Astro.props;
---

<article class="border border-doha-100 bg-doha-20 rounded-2xl overflow-hidden w-[588px] mx-auto h-[666px]">
    <!-- Image Container -->
    <div class="relative">
        <img 
            src={image} 
            alt={imageAlt} 
            class="w-full h-64 object-cover"
        />
    </div>
    
    <!-- Content -->
    <div class="p-6">
        <!-- Title -->
        <h3 class="text-[28px] font-extrabold text-doha-100">
            {title}
        </h3>
        
        <!-- Date -->
        <div class="flex items-center mb-4">
            <span class="text-doha-50 text-md">{date}</span>
        </div>
        
        <!-- Description -->
        <p class="text-black text-md text-justify mb-4 line-clamp-6">
            {description}
        </p>
    </div>
</article>