---
export interface Props {
    image: string;
    imageAlt: string;
    category: string;
    title: string;
    location: string;
    targetAudience: string;
    link: string;
}

const { image, imageAlt, category, title, location, targetAudience, link } = Astro.props;
---

<div class="bg-doha-20 rounded-2xl shadow-lg overflow-hidden max-w-[380px] h-[541px] mx-auto hover:shadow-2xl transition-shadow duration-300 border border-doha-50 flex flex-col">
    <!-- Image Container -->
    <div class="relative">
        <img 
            src={image} 
            alt={imageAlt} 
            class="w-full h-48 object-cover"
        />
        <!-- Category Badge -->
        <div class="absolute -bottom-4 left-6">
            <span class="bg-doha-100 py-2 px-6 text-doha-20 rounded-full text-sm font-medium">
                {category}
            </span>
        </div>
    </div>
    
    <!-- Content -->
    <div class="p-6 flex flex-col flex-1">
        <!-- Title -->
        <h3 class="text-[28px] leading-normal font-extrabold text-doha-100 mb-4 line-clamp-4 flex-1">
            {title}
        </h3>
        
        <div class="mt-auto">
            <!-- Location -->
            <div class="flex items-center mb-3">
                <div class="mr-4 bg-doha-100 rounded-full px-1 py-1 flex justify-center items-center">
                    <svg class="w-4 h-4 text-doha-20" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                    </svg>
                </div>
                <span class="text-black text-md font-medium">{location}</span>
            </div>
            
            <!-- Target Audience -->
            <div class="flex items-center mb-4">
                <svg class="w-6 h-6 mr-4 text-doha-100" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                </svg>
                <span class="text-black text-md">{targetAudience}</span>
            </div>
            
            <!-- Link -->
            <a 
                href={link}
                class="inline-flex items-center leading-[100%] text-doha-50 text-md hover:text-doha-100 transition-colors duration-200 group"
            >
                Lihat selengkapnya
                <svg class="w-4 h-4 ml-2 transition-transform duration-200 group-hover:translate-x-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
            </a>
        </div>
    </div>
</div>