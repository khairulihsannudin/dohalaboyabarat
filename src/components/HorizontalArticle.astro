---
export interface Props {
    image: string;
    imageAlt: string;
    title: string;
    date: string;
    description: string;
    link: string;
}

const { image, imageAlt, title, date, description, link } = Astro.props;
---

<article class="bg-white border rounded-2xl lg:max-h-[221px] overflow-hidden max-w-4xl mx-auto">
    <div class="flex flex-col md:flex-row">
        <!-- Image Container -->
        <div class="md:w-1/2">
            <img 
                src={image} 
                alt={imageAlt} 
                class="w-full h-64 md:h-full object-cover"
            />
        </div>
        
        <!-- Content Container -->
        <div class="md:w-1/2 p-6 flex flex-col justify-center">
            <!-- Title -->
            <h3 class="text-xl font-extrabold text-doha-100 line-clamp-4">
                {title}
            </h3>
            
            <!-- Date -->
            <div class="mb-2">
                <span class="text-doha-50 text-md">{date}</span>
            </div>
            
            <!-- Description -->
            <p class="text-black text-md line-clamp-1">
                {description}
            </p>
        </div>
    </div>
</article>